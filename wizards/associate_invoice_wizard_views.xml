<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Form del Wizard -->
    <record id="associate_invoice_wizard_form" model="ir.ui.view">
        <field name="name">associate.invoice.wizard.form</field>
        <field name="model">associate.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Asociar Facturas">
                <group>
                    <field name="shipment_id"/>
                    <field name="company_id" invisible="1"/>
                </group>
                <group string="Seleccione las facturas a asociar">
                    <field name="invoice_ids" widget="many2many_tags" 
                           nolabel="1" colspan="2"
                           options="{'no_create': True, 'no_quick_create': True}"/>
                </group>
                <group>
                    <p class="text-muted">
                        Solo se muestran facturas sin embarque asignado.
                        Las facturas de venta aparecerán en "Facturas de Venta" y las de compra en "Facturas de Proveedor".
                    </p>
                </group>
                <footer>
                    <button name="action_associate" type="object" string="Asociar" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción para abrir el wizard -->
    <record id="action_associate_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Asociar Facturas</field>
        <field name="res_model">associate.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_shipment_id': active_id}</field>
    </record>

</odoo>

